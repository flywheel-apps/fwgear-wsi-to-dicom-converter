{
  "name": "wsi-to-dicom",
  "label": "WSI to dicom",
  "description": "This gear contains a tool that converts whole slide images (WSIs) to DICOM. To read the underlying whole slide images (WSIs), this tool relies on OpenSlide, which supports a variety of file formats.",
  "version": "0.0.5",
  "custom": {
    "gear-builder": {
      "category": "analysis",
      "image": "flywheel/fwgear-wsi-to-dicom-converter:0.1.0_1.0.3"
    },
    "flywheel": {
      "suite": "Whole Slide Image"
    }
  },
  "inputs": {
    "Input_file": {
      "description": "Input .svs file to be converted",
      "base": "file"
    },
    "jsonFile": {
      "description": "Dicom json file with additional tags",
      "optional": true,
      "base": "file",
      "type": { "enum" : ["source code"] }
    }

  },
  "config": {
      "tileHeight": {
        "description": "Tile height px.",
        "optional": true,
        "type": "integer"
      },
      "tileWidth": {
        "description": "Tile width px.",
        "optional": true,
        "type": "integer"
      },
      "levels": {
        "description": "Number of levels to generate, levels == 0 means number of levels will be read from wsi file.",
        "optional": true,
        "type": "integer"
      },
      "downsamples": {
        "description": "Size factor for each level for each level, downsample is size factor for each level.",
        "optional": true,
        "type": "string"
      },
      "startOn": {
        "description": "Level to start generation.",
        "optional": true,
        "type": "integer"
      },
      "stopOn": {
        "description": "Level to stop generation.",
        "optional": true,
        "type": "integer"
      },
      "sparse": {
        "description": "Use TILED_SPARSE frame organization, by default it's TILED_FULL",
        "optional": true,
        "type": "boolean"
      },
      "compression": {
        "description": "Compression, supported compressions: jpeg, jpeg2000, raw.",
        "default": "jpeg",
        "type": "string",
        "enum": [
          "jpeg",
          "jpeg2000",
          "raw"
        ]
      },
      "seriesDescription": {
        "description": "(0008,103E) [LO] SeriesDescription Dicom tag.",
        "optional": true,
        "type": "string"
      },
      "studyId":{
        "description": "(0020,000D) [UI] StudyInstanceUID Dicom tag.",
        "optional": true,
        "type": "string"
      },
      "seriesId":{
        "description": "(0020,000E) [UI] SeriesInstanceUID Dicom tag.",
        "optional": true,
        "type": "string"
      },
      "batch":{
        "description": "Maximum frames in one file, as limit is exceeded new files is started.",
        "optional": true,
        "type": "integer"
      },
      "debug":{
        "description": "Print debug messages: dimensions of levels, size of frames.\n",
        "optional": true,
        "type": "boolean"
      },

      "dropFirstRowAndColumn":{
        "description": "Drop first row and column of the source image in order to workaround bug",
        "optional": true,
        "type": "boolean"
      }
  },
  
  "environment": {},
  "command": "/bin/python3.8 /flywheel/v0/run.py",
  "author": "Flywheel",
  "maintainer": "Flywheel <support@flywheel.io>",
  "cite": "",
  "license": "Other",
  "source": "https://github.com/flywheel-apps/template-dev",
  "url": ""
}
